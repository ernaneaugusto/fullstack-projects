<% include ../partials/header %>

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2>Nova série:</h2>
            <p class="lead">Cadastre novas séries:</p>
            
            <form method="post">
                <div class="form-group">
                  <label for="name">Nome da série</label>
                  <input type="text" class="form-control" name="name" aria-describedby="serieHelp" placeholder="Nome da série" />
                  <% if(errors && (errors.indexOf('name') >= 0)) { %>
                  <small class="text-danger">Campo <strong>Nome da série</strong> é obrigatório.</small>
                  <% } %>
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select class="form-control" name="status">
                      <option value="to-watch">Não assistido</option>
                      <option value="watching">Assistindo</option>
                      <option value="watched">Assistido</option>
                    </select>
                  </div>
                <button class="btn btn-info">Adicionar série</button>
              </form>
            
          </div>
        </div>
      </div>
    </section>

<% include ../partials/footer %>