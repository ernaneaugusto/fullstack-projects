<% include ../partials/header %>

    <section id="about">
      <div class="container">
        <div class="row">
          <div class="col-lg-8 mx-auto">
            <h2>Editar série:</h2>
            
            <form method="post">
                <div class="form-group">
                  <label for="name">Nome da série</label>
                  <input value="<%= serie.name %>" type="text" class="form-control" name="name" aria-describedby="serieHelp" placeholder="Nome da série" />
                  <% if(errors && (errors.indexOf('name') >= 0)) { %>
                  <small class="text-danger">Campo <strong>Nome da série</strong> é obrigatório.</small>
                  <% } %>
                </div>
                <div class="form-group">
                    <label for="status">Status</label>
                    <select class="form-control" name="status">                              
                      <% labelsSerie.forEach(item => { %>
                        <option value="<%= item.status %>" <% if(item.status == serie.status) { %> selected='selected' <% } %> >
                          <%= item.name %>
                        </option>
                      <% }) %>
                    </select>
                  </div>
                <button class="btn btn-info">Atualizar série</button>
                <a class="btn btn-danger" href="/series/excluir/<%= serie._id %>">Excluir série</a>
              </form>
            
          </div>
        </div>
      </div>
    </section>

<% include ../partials/footer %>